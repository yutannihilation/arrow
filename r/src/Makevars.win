VERSION=0.11.1
RWINLIB=../windows/arrow-$(VERSION)
PKG_CPPFLAGS=-I../inst/include -I$(RWINLIB)/include/arrow

# TODO: fix path
PKG_LIBS=-L$(RWINLIB)/lib-4.9.3${R_ARCH} -larrow

all: clean winlibs

clean:
	rm -f $(OBJECTS) $(SHLIB)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" --vanilla "../tools/winlibs.R" $(VERSION)

.PHONY: all winlibs clean
